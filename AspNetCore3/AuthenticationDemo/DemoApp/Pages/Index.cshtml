@page
@model DemoApp.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
	<head>
		<title>DemoApp</title>
	</head>
	<body>
		<h1>Welcome Visitor</h1>
		<form method="POST">
			<table>
				<tr>
					<td><b>Your Name:</b></td>
					<td><input asp-for="Input.Id" required="required"/></td>
				</tr>
				<tr>
					<td><b>Password:</b></td>
					<td><input type="password" asp-for="Input.Password" required="required"/></td>
					<td><input type="submit" name="signCommand" value="Sign-In"/></td>
				</tr>
				<tr>
					<td><b>Confirm Password:</b></td>
					<td><input type="password" asp-for="Input.ConfirmPassword"/></td>
					<td><input type="submit" name="signCommand" value="Sign-Up"/></td>
				</tr>
				<tr>
					<td><div asp-validation-summary="All"></div></td>
				</tr>
			</table>
		</form>
	</body>
</html>

