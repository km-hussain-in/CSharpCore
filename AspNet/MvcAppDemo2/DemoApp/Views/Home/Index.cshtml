<!DOCTYPE html>
@model IEnumerable<DemoApp.Models.Visitor>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
    <head>
        <title>DemoApp</title>
    </head>
    <body>
        <h1>Our Visitors</h1>
        <table border="1">
            <tr>
                <th>Visitor Name</th>
                <th>Visit Count</th>
                <th>Last Visit</th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(i => item.Name)</td>
                    <td>@Html.DisplayFor(i => item.Frequency)</td>
                    <td>@Html.DisplayFor(i => item.Recent)</td>
                </tr>
            }
        </table>
        <p>
            <a asp-action="Register" asp-controller="Home">Register Your Visit</a>
        </p>
    </body>
</html>